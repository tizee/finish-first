{
  "name": "finish-first",
  "version": "1.0.0",
  "description": "ADHD productivity extension - finish your task first before browsing",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:chrome && pnpm build:firefox",
    "build:chrome": "tsc && vite build --mode chrome",
    "build:firefox": "tsc && vite build --mode firefox && web-ext build --source-dir=./dist-firefox -a=./dist --overwrite-dest",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "preview": "vite preview",
    "lint": "tsc --noEmit"
  },
  "author": "tizee",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.1.32",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.16",
    "web-ext": "^9.2.0"
  }
}
